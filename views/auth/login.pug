extends ../layout/layout

block content
    h1 Login 

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method='POST')
        .form-group
            label(for='email') Email
            input#email(type="text", name='email',class='form-control',value=values ? values.email : '')
        .form-group
            label(for = 'password') Password
            input#password(type="password", name='password',class='form-control',value=values ? values.password : '')
        button.btn.btn-primary.ml-2 Login