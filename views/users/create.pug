extends ../layout/layout

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create" method='POST')
        .form-group
            label(for='name') Name
            input#name(type="text", name='name',class='form-control',value=values ? values.name : '')
        .form-group
            label(for = 'phone') Phone
            input#phone(type="text", name='phone',class='form-control',value=values ? values.phone : '')
        .form-group
            label(for = 'email') Email
            input#email(type="text", name='email',class='form-control',value=values ? values.email : '')
        .form-group
            label(for = 'password') Password
            input#password(type="password", name='password',class='form-control',value=values ? values.password : '')        
        button.btn.btn-primary.ml-2 Create